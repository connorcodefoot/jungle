<section class="admin-products-new">

  <header class="page-header">
    <h1> New Product</h1>
  </header>
  
      <%= bootstrap_form_for [:admin, @product] do |f| %>

        <% if f.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% f.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.text_field :name, class: 'form-control', floating: true %>
        </div>

        <div class="form-group">
          <%= f.text_area :description, class: 'form-control', floating: true %>
        </div>

        <div class="form-group">
          <%= f.select :category_id, options_from_collection_for_select(Category.all.order(:name), :id, :name), { include_blank: true }, class: 'form-control', floating: true %>
        </div>

        <div class="form-group">
          <%= f.number_field :quantity, class: 'form-control', floating: true %>
        </div>

        <div class="form-group">
          <%= f.text_field :price, class: 'form-control', floating: true %>
        </div>

        <div class="f-group">
          <%= f.file_field :image %>
        </div>

        <%= f.submit '+ Create Product', class: 'btn btn-primary' %>
      <% end %>
  </div>

</section>
